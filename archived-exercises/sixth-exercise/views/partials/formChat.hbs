<h1 class="d-flex display-4 justify-content-center mb-5">CHAT FORM</h1>

<div class="container-sm">
  <div class="mb-3">
    <input
      id="email"
      name="email"
      type="email"
      placeholder="Email"
      class="form-control bg-transparent text-white"
      required
    />
  </div>
  <div class="mb-3">
    <input
      id="message"
      name="message"
      type="text"
      placeholder="Write a message..."
      class="form-control bg-transparent text-white"
    />
  </div>

  <button class="btn btn-primary" onclick="sendMessage()">Send</button>
</div>